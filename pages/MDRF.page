                        <apex:outputText value=" Male"/>
                        
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <apex:outputText rendered="{!IF(currentOrder.patient__r.gender__c = 'Female', true, false)}" value="[X]"/>
