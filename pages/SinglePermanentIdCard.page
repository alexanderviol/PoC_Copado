                    </tr>
                    <tr>
                        <td class="deviceFont"></td>
                        <td></td>
                        <td class="deviceFont"/>
                    </tr>
                	</apex:outputPanel>
                    <apex:outputPanel rendered="{!patient.totalSpaces > 2}">
