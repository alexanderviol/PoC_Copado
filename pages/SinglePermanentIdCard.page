                            <apex:repeat value="{!patient.con.Assets}" var="dev">
                            	<div align="center">
                                	<apex:outputText value="IMPLANTABLE CARDIAC PACEMAKER"
                                             rendered="{!OR(dev.product_type__c == 'Pacemaker', 
