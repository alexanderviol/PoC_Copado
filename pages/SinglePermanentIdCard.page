<apex:page standardController="contact" extensions="PermanentIdcardGenerator" 
            contentType="application/msword#PermanentIdCards.doc" id="frmId" action="{!updatePrintDate}">
    <style>
        .deviceFont {
            font-size:9px;
        	font-family: Arial;
        } 
        .detailsFont {
            font-size:10px; 
        	font-family: Arial;
        }
        table.patientId {
    		width: 100%;
        }
        
    </style>
    <apex:form style="font-family:Arial;font-size:13px; margin-top:0.0in; margin-bottom:0.0in;">        
        <apex:outputPanel rendered="{!renderPanel}">
